{
    "version": 2,
    "builds": [
        {
            "src": "/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "/routes/auth.js",
            "use": "@vercel/node"
        },
        {
            "src": "/routes/tasks.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.js",
            "methods": [
                "GET",
                "POST",
                "PATCH",
                "PUT",
                "DELETE",
                "OPTIONS"
            ],
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET,PATCH,PUT,POST,DELETE,OPTIONS",
                "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version",
                "Access-Control-Allow-Credentials": "true"
            }
        },
        {
            "src": "/register",
            "dest": "/auth.js",
            "methods": [
                "GET",
                "POST",
                "PATCH",
                "OPTIONS"
            ]
        },
        {
            "src": "/login",
            "dest": "/auth.js",
            "methods": [
                "GET",
                "POST",
                "PATCH",
                "OPTIONS"
            ]
        },
        {
            "src": "/task",
            "dest": "/tasks.js",
            "methods": [
                "POST",
                "PATCH",
                "OPTIONS"
            ]
        },
        {
            "src": "/alltasks",
            "dest": "/tasks.js",
            "methods": [
                "GET",
                "PATCH",
                "OPTIONS"
            ]
        },
        {
            "src": "/task/:id",
            "dest": "/tasks.js",
            "methods": [
                "GET",
                "OPTIONS"
            ]
        },
        {
            "src": "/updatetask/:id",
            "dest": "/tasks.js",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "OPTIONS"
            ]
        },
        {
            "src": "/deletetask/:id",
            "dest": "/tasks.js",
            "methods": [
                "GET",
                "POST",
                "DELETE",
                "OPTIONS"
            ]
        }
    ],
    "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,PATCH,POST,PUT,DELETE,OPTIONS",
        "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version",
        "Access-Control-Allow-Credentials": "true"
    }
}